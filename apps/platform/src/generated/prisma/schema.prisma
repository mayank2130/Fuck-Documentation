generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(cuid())
  email        String        @unique
  clerkId      String        @unique
  name         String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  apiKeys      ApiKey[]
  integrations Integration[]
}

model ApiKey {
  id        String   @id @default(cuid())
  key       String   @unique
  name      String?
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

enum Provider {
  GMAIL
  NOTION
}

model Integration {
  id           String    @id @default(cuid())
  provider     Provider
  // tokens
  accessToken  String
  refreshToken String?
  // expiry time (nullable)
  expiresAt    DateTime?
  scope        String?
  // link to user
  userId       String
  user         User      @relation(fields: [userId], references: [id])
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@unique([userId, provider])
}
